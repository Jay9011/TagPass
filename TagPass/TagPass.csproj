    <PackageReference Include="Serilog.Sinks.DateFormatPath" Version="1.0.1" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
    <PackageReference Include="SingletonManager" Version="1.5.0" />
