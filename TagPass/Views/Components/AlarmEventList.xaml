<UserControl x:Class="TagPass.Views.Components.AlarmEventList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TagPass"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Style="{StaticResource CardStyle}" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 로그 목록 헤더 -->
            <Border Grid.Row="0" 
                    Background="{StaticResource PrimaryColor}" 
                    CornerRadius="8,8,0,0" 
                    Padding="15,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="시간" 
                               Foreground="{StaticResource TextPrimaryColor}" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="1" 
                               Text="카드번호" 
                               Foreground="{StaticResource TextPrimaryColor}" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="2" 
                               Text="이름" 
                               Foreground="{StaticResource TextPrimaryColor}" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="3" 
                               Text="소속" 
                               Foreground="{StaticResource TextPrimaryColor}" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="4" 
                               Text="상태" 
                               Foreground="{StaticResource TextPrimaryColor}" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                    <TextBlock Grid.Column="5" 
                               Text="위치" 
                               Foreground="{StaticResource TextPrimaryColor}" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- 로그 목록 -->
            <ListBox Grid.Row="1" 
                    x:Name="AccessLogListBox"
                    Background="Transparent" 
                    BorderThickness="0"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ItemsSource="{Binding AccessLogs}"
                    SelectedItem="{Binding SelectedEmployee}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Transparent" 
                                Padding="15,10" 
                                BorderThickness="0,0,0,1" 
                                BorderBrush="{StaticResource BorderColor}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 시간 -->
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding FormattedDate, Converter={StaticResource DateFormatConverter}, ConverterParameter={x:Static local:DateFormatType.DateOnly_kor}}"
                                               Style="{StaticResource BodyTextStyle}"
                                               HorizontalAlignment="Center"
                                               FontFamily="Consolas"/>
                                    <TextBlock Text="{Binding FormattedDate, Converter={StaticResource DateFormatConverter}, ConverterParameter={x:Static local:DateFormatType.TimeOnly}}"
                                               Style="{StaticResource LabelTextStyle}" 
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- 카드 번호 -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CardNo}"
                                               Style="{StaticResource BodyTextStyle}" 
                                               HorizontalAlignment="Center"
                                               FontWeight="SemiBold"/>
                                </StackPanel>

                                <!-- 이름 -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                               Style="{StaticResource LabelTextStyle}" 
                                               HorizontalAlignment="Center"
                                               FontSize="14"
                                               FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Sabun}" 
                                               Style="{StaticResource BodyTextStyle}" 
                                               HorizontalAlignment="Center"
                                               FontSize="11"/>
                                </StackPanel>

                                <!-- 소속 -->
                                <TextBlock Grid.Column="3" 
                                           Text="{Binding OrgName}" 
                                           Style="{StaticResource BodyTextStyle}"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>

                                <!-- 상태 -->
                                <Border Grid.Column="4" 
                                        CornerRadius="10">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding StateName}" Value="입실">
                                                    <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding StateName}" Value="퇴실">
                                                    <Setter Property="Background" Value="{StaticResource WarningColor}"/>
                                                </DataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding StateName, Converter={StaticResource StringContainsConverter}, ConverterParameter=입실}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding StateName, Converter={StaticResource StringContainsConverter}, ConverterParameter=퇴실}" Value="True"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background" Value="{StaticResource WarningColor}"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding StateName}" 
                                               Foreground="{StaticResource TextPrimaryColor}" 
                                               FontWeight="Bold" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </Border>

                                <!-- 위치 -->
                                <TextBlock Grid.Column="5" 
                                           Text="{Binding EqName}" 
                                           Style="{StaticResource LabelTextStyle}"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryLightColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SecondaryLightColor}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </Border>
</UserControl> 