<Window x:Class="TagPass.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TagPass"
        xmlns:components="clr-namespace:TagPass.Views.Components"
        xmlns:views="clr-namespace:TagPass.Views"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType"
        Title="TagPass - 출입 모니터링 시스템" Width="1920" Height="1080"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <!-- 메인 레이아웃 -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 상단 헤더 -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 제목 영역 -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="출입 모니터링 시스템" 
                                   Style="{StaticResource H1}"/>
                        <TextBlock Text="{Binding CurrentTime, StringFormat='현재 시간: {0:yyyy-MM-dd HH:mm:ss}'}" 
                                   Style="{StaticResource BodyTextStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- 메인 콘텐츠 영역 -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 카드 영역 -->
                <Border Grid.Column="0" Style="{StaticResource CardStyle}"
                        Padding="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 카드 헤더 -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource PrimaryColor}" 
                                CornerRadius="8,8,0,0" 
                                Padding="15,10">
                            <TextBlock Text="사원 정보" 
                                       Foreground="White" 
                                       FontWeight="Bold" 
                                       FontSize="16" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                        </Border>

                        <!-- 사원 카드 영역 -->
                        <Canvas x:Name="CardCanvas" Grid.Row="1" ClipToBounds="True">
                            <Canvas.Background>
                                <ImageBrush ImageSource="/Resources/Image/holographic_background.jpg" 
                                            Stretch="UniformToFill" 
                                            Opacity="0.4"/>
                            </Canvas.Background>
                        </Canvas>

                        <!-- 추가 정보 -->
                        <Border Grid.Row="2" 
                                Background="{StaticResource DarkBackgroundColor}" 
                                CornerRadius="8" 
                                Padding="15" 
                                Margin="0,15,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                           Text="출입 정보" 
                                           Style="{StaticResource H3}" 
                                           Foreground="{StaticResource TextSecondaryColor}"
                                           Margin="0,0,0,10"/>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="위치" Style="{StaticResource BodyTextStyle}"/>
                                        <TextBlock Text="{Binding SelectedEmployee.LocationName}" 
                                                   Style="{StaticResource LabelTextStyle}" 
                                                   FontWeight="Bold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="출입구" Style="{StaticResource BodyTextStyle}"/>
                                        <TextBlock Text="{Binding SelectedEmployee.EqName}" 
                                                   Style="{StaticResource LabelTextStyle}" 
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </Grid>

                                <TextBlock Grid.Row="2" 
                                           Text="{Binding SelectedEmployee.FormattedDate, StringFormat='출입 시간: {0}'}" 
                                           Style="{StaticResource LabelTextStyle}" 
                                           Margin="0,10,0,0"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- 가운데 분할선 -->
                <Rectangle Grid.Column="1" 
                           Fill="{StaticResource BorderColor}" 
                           Width="1" 
                           HorizontalAlignment="Center"/>

                <!-- 출입 로그 목록 -->
                <components:AlarmEventList x:Name="AlarmEventListComponent" Grid.Column="2"/>

            </Grid>
        </Grid>

        <!-- 설정 뷰 -->
        <views:SettingsView x:Name="SettingsView" 
                            Visibility="Collapsed"
                            SettingsClosed="SettingsView_SettingsClosed"/>

        <!-- 콘솔 뷰 -->
        <views:ConsoleView x:Name="ConsoleView" 
                           Visibility="Collapsed"
                           ConsoleClosed="ConsoleView_ConsoleClosed"/>

    </Grid>
</Window>
